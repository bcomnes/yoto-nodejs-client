{
  "name": "yoto-nodejs-client",
  "description": "(Unofficial) Node.js client for the Yoto API with automatic token refresh, MQTT device communication, and TypeScript support",
  "version": "0.0.7",
  "author": "Bret Comnes <bcomnes@gmail.com> (https://bret.io)",
  "bugs": {
    "url": "https://github.com/bcomnes/yoto-nodejs-client/issues"
  },
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "mqtt": "^5.14.1",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@unblessed/node": "1.0.0-alpha.23",
    "@types/node": "^25.0.0",
    "@voxpelli/tsconfig": "^16.1.0",
    "argsclopts": "^1.0.5",
    "auto-changelog": "^2.0.0",
    "c8": "^10.0.0",
    "eslint": "^9.39.2",
    "gh-release": "^7.0.0",
    "neostandard": "^0.12.0",
    "npm-run-all2": "^8.0.1",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "homepage": "https://github.com/bcomnes/yoto-nodejs-client",
  "keywords": [
    "yoto",
    "yoto-play",
    "yoto-player",
    "api",
    "api-client",
    "mqtt",
    "iot",
    "smart-speaker",
    "audiobooks",
    "kids",
    "homekit"
  ],
  "license": "MIT",
  "type": "module",
  "module": "index.js",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map",
    "lib/",
    "bin/",
    "yoto.png"
  ],
  "bin": {
    "yoto-auth": "./bin/auth.js",
    "yoto-token-info": "./bin/token-info.js",
    "yoto-refresh-token": "./bin/refresh-token.js",
    "yoto-devices": "./bin/devices.js",
    "yoto-device-model": "./bin/device-model.js",
    "yoto-content": "./bin/content.js",
    "yoto-groups": "./bin/groups.js",
    "yoto-icons": "./bin/icons.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bcomnes/yoto-nodejs-client.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build && git push --follow-tags && gh-release -y",
    "postpublish": "npm run clean",
    "test": "run-s test:*",
    "test:lint": "eslint",
    "test:tsc": "tsc",
    "test:node-test": "c8 node --test --test-reporter spec",
    "version": "run-s version:*",
    "version:changelog": "auto-changelog -p --template keepachangelog auto-changelog --breaking-pattern 'BREAKING CHANGE:'",
    "version:git": "git add CHANGELOG.md",
    "build": "npm run clean && run-p build:*",
    "build:declaration": "tsc -p declaration.tsconfig.json",
    "clean": "run-p clean:*",
    "clean:declarations-top": "rm -rf $(find . -maxdepth 1 -type f -name '*.d.ts*' -o -name '*.d.cts*' -o -name '*.d.mts*')",
    "clean:declarations-lib": "rm -rf $(find lib -type f \\( -name '*.d.ts*' -o -name '*.d.cts*' -o -name '*.d.mts*' \\) ! -name '*-types.d.ts')",
    "clean:declarations-bin": "rm -rf $(find bin -type f \\( -name '*.d.ts*' -o -name '*.d.cts*' -o -name '*.d.mts*' \\) ! -name '*-types.d.ts')"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/bcomnes"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
